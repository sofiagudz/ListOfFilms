@model ListOfFilms.Film;
   
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<p style="text-align: center; font-size: 29px; font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; text-shadow: 1px 1px 1px grey">@Html.DisplayFor(model => model.Name)</p>
                <table style="width:50%; margin: auto;">
                        <tr>
                            <td rowspan="4"><img src="@Url.Content(Model?.Poster)" style="height: 500px; margin: 10px"></td>
                            <td style="width: 300px; height: 40px;">
                                          <div style="font-size: 21px; font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;"><span style="text-decoration:underline; font-size: 24px;">Year</span> - @Html.DisplayFor(model => model.Year)</div>
                            </td>
                        </tr>
                        <tr>
                            <td style="width: 300px; height: 40px;">
                                            <div style="font-size: 21px; font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;"><span style="text-decoration:underline; font-size: 24px;">Genre</span> - @Html.DisplayFor(model => model.Genre)</div>
                            </td>
                        </tr>
                        <tr>
                            <td style="width: 300px; height: 40px;">
                                            <div style="font-size: 21px; font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;"><span style="text-decoration:underline; font-size: 24px;">Director</span> - @Html.DisplayFor(model => model.Director)</div>
                            </td>
                        </tr>
                        <tr>
                            <td style="width: 300px; height: 40px;">
                                            <div style="font-size: 21px; font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;"><span style="text-decoration:underline; font-size: 24px;">Description</span> - @Html.DisplayFor(model => model.Description)</div>
                            </td>
                        </tr>
                        <tr>
                            <td style="font-size: 19px; text-align: center;" colspan="2">
                                <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
                                <a asp-action="Index">Back to List</a>
                            </td>
                        </tr>
                    </table>
